@model Grow.Models.TransactionDetail

<h2>Edit Item</h2>
<br />
<form asp-controller="TransactionDetails" asp-action="EditItem" method="post" id="theItemForm">
    <input type="hidden" asp-for="TransactionID" />
    <input type="hidden" asp-for="ID" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ItemID" class="control-label"></label>
                <input value="@Model.Item.ItemName" class="form-control" readonly />
                <span asp-validation-for="ItemID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" min="1" max="100" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" id="submitItemForm" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}