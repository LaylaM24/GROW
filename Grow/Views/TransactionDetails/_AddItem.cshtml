@model Grow.Models.TransactionDetail

<h2>Add Item</h2>
<br />
<form asp-controller="TransactionDetails" asp-action="AddItem" method="post" id="theItemForm">
    <input type="hidden" asp-for="TransactionID" value="@ViewData["TransactionID"]" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ItemID" class="control-label"></label>
                <select id="ddlItem" asp-for="ItemID" class="form-control" asp-items="ViewBag.ItemID">
                    <option value="-1" selected disabled>Select an Item</option>
                </select>
                <span asp-validation-for="ItemID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" value="1" min="1" max="100" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" id="submitItemForm" disabled="disabled" />
            </div>
        </div>
    </div>
</form>

<script src="~/js/AddItem.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}