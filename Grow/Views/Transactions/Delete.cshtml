@model Grow.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<h3>Are you sure you want to delete this Transaction?</h3>
<br />
<div>
    <h2>Transaction</h2>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransactionTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Household)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Household.HouseholdName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.FullName)
        </dd class>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="row">
            <div class="form-group">
                <a asp-action="Index">
                    <input type="button" value="Back to List" class="btn btn-secondary" />
                </a>
            </div>
            <div class="ml-2"></div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>
