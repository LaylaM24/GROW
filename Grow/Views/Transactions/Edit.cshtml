@model Grow.Models.Transaction

@{
    ViewData["Title"] = "Edit Transaction";
}

<h2>Edit Transaction</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label"></label>
                <input asp-for="TransactionDate" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionTotal" class="control-label"></label>
                <input asp-for="TransactionTotal" class="form-control" />
                <span asp-validation-for="TransactionTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdID" class="control-label"></label>
                <select asp-for="HouseholdID" class="form-control" asp-items="ViewBag.HouseholdID"></select>
                <span asp-validation-for="HouseholdID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerID" class="control-label"></label>
                <select asp-for="VolunteerID" class="form-control" asp-items="ViewBag.VolunteerID"></select>
                <span asp-validation-for="VolunteerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
