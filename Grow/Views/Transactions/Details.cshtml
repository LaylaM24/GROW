@model Grow.Models.Transaction

@{
    ViewData["Title"] = "Transaction Details";
}

<h2>Transaction Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Household)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Household.HouseholdName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volunteer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volunteer.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionDetails)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.TransactionDetails.FirstOrDefault().Item)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.TransactionDetails.FirstOrDefault().Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.TransactionDetails.FirstOrDefault().ExtendedCost)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model.TransactionDetails)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => transaction.Item.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => transaction.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => transaction.ExtendedCost)
                            </td>
                            <td>
                                <a asp-controller="TransactionDetails" asp-action="Details" asp-route-id="@transaction.ID">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<br />
<p>
    @Html.ActionLink("Add", "Add", "TransactionDetails", new { id = Model.ID }, null) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to Transaction List", "Index")
</p>
