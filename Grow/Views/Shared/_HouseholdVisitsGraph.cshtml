<!DOCTYPE html>
<html>
    <head>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    </head>
    <body>
        <canvas id="householdVisits" style="width: 100%; max-width: 600px"></canvas>
        <script>
            var xValues = ["Bonds", "Walker", "Cob", "Ortiz", "Clemens"];
            var yValues = [0, 0, 0, 0, 0];
            var barColors = ["red", "green", "yellow", "blue", "orange"];

            new Chart("householdVisits", {
                type: "bar",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    legend: { display: false },
                    title: {
                        display: true,
                        text: "Household Visits By Residence"
                    },
                    scales: {
                        yAxes: [{
                            display: true,
                            ticks: {
                                min: 0,
                                max: 2,
                                stepSize: 1
                            }
                        }]
                    }
                }
            });
        </script>
    </body>
</html>
