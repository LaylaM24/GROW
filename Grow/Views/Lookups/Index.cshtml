@{
    ViewData["Title"] = "Lookup Index";
}
<h2>Lookup Values</h2>
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <h4 id="MedicalTrials">Health Concerns</h4>
            @Html.DropDownList("HealthConcernsID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="HealthConcerns" asp-action="Create">Create</a> |
                <a asp-controller="HealthConcerns" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="HealthConcerns" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <h4 id="Conditions">Dietary Restrictions</h4>
            @Html.DropDownList("DietaryRestrictionsID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="DietaryRestrictions" asp-action="Create">Create</a> |
                <a asp-controller="DietaryRestrictions" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="DietaryRestrictions" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <h4 id="Specialties">Income Sources</h4>
            @Html.DropDownList("IncomeSourcesID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="IncomeSources" asp-action="Create">Create</a> |
                <a asp-controller="IncomeSources" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="IncomeSources" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <h4 id="MedicalTrials">Cities</h4>
            @Html.DropDownList("CitiesID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="Cities" asp-action="Create">Create</a> |
                <a asp-controller="Cities" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="Cities" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <h4 id="Conditions">Genders</h4>
            @Html.DropDownList("GendersID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="Genders" asp-action="Create">Create</a> |
                <a asp-controller="Genders" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="Genders" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <h4 id="Specialties">Item Categories</h4>
            @Html.DropDownList("ItemCategoriesID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="ItemCategories" asp-action="Create">Create</a> |
                <a asp-controller="ItemCategories" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="ItemCategories" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(".linkClick").click(function (event) {
            event.preventDefault();
            var address = $(this).attr("href");
            var lookup = address.split("/")[1];
            var id = $("#" + lookup + "ID").val();
            var caption = $("#" + lookup).html();
            if (id == null) {
                alert("Error: no value selected from the " + caption + " list!");
            } else {
                window.location.href = address + "/" + id;
            }
        });
    </script>
}