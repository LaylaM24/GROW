@model Grow.Models.Payment

<h2>Edit Payment</h2>
<br />
<form asp-controller="Payment" asp-action="EditPayment" method="post" id="thePaymentForm">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="TransactionID" />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="PaymentMethodID" class="control-label"></label>
                <select asp-for="PaymentMethodID" class="form-control" asp-items="ViewBag.PaymentMethods">
                    <option value="-1" selected disabled>Select a Payment Method</option>
                </select>
                <span asp-validation-for="PaymentMethodID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="PaymentAmount" class="control-label"></label>
                <input asp-for="PaymentAmount" min="0.01" class="form-control" />
                <span asp-validation-for="PaymentAmount" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" id="submitPaymentForm" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}