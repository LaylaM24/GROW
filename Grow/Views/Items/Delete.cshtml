@model Grow.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<h3>Are you sure you want to delete this Item?</h3>
<br />
<div>
    <h2>@Model.ItemName</h2>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemCategory.CategoryName)
        </dd class>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="row">
            <div class="form-group">
        <a href='@ViewData["returnURL"]'>
            <input type="button" value="Back to List" class="btn btn-secondary" />
        </a>
            </div>
            <div class="ml-2"></div>
            <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>
