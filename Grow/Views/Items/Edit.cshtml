@model Grow.Models.Item

@{
    ViewData["Title"] = "Edit Item";
}

<h2>Edit Item: @Model.ItemName</h2>

<hr />
<div class="alert alert-primary" role="alert">
    Please Follow The Guidelines Below When Editing An Item:<br />
    Produce - Item Number Must Be Between 100-199<br />
    Freezer - Item Number Must Be Between 200-299<br />
    Dairy/Eggs/Bread - Item Number Must Be Between 300-399<br />
    Pantry - Item Number Must Be Between 400-499<br />
    Specials - Item Number Must Be Between 600-699
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ItemNo" class="control-label"></label>
                <input asp-for="ItemNo" class="form-control" />
                <span asp-validation-for="ItemNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemCategoryID" class="control-label"></label>
                <select asp-for="ItemCategoryID" class="form-control" asp-items="ViewBag.ItemCategoryID"></select>
                <span asp-validation-for="ItemCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='@ViewData["returnURL"]'>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
